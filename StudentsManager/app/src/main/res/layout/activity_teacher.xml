<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Teacher">


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/LLsinhvienone"
        android:layout_width="match_parent"
        android:layout_height="411dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/avatar_danh"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="Tên GV:"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="Khoa:"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:layout_weight="1"
                android:text="Giới tính:"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="THÔNG TIN CÁ NHÂN"
        android:textColor="#c3454040" />



    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/LLsinhvienthree"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textColor="#ff0000"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:text="Quản lý học tập" />

        <TextView
            android:textColor="#ff0000"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView1"
            android:layout_marginLeft="220dp"

            android:text="Quản lý giảng dạy" />

        <ImageButton
            android:background="@drawable/imaschedule"
            android:layout_marginLeft="250dp"
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:background="@drawable/imgstudy"
            android:layout_marginLeft="75dp"
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:background="@drawable/imglogout"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="130dp"
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:background="@drawable/imglogout"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="130dp"
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textColor="#ff0000"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="200dp"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý tài khoản" />

        <TextView
            android:textColor="#ff0000"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginLeft="245dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất" />
    </RelativeLayout>



</LinearLayout>