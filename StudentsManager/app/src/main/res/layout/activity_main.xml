<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroudlogin"
    tools:context=".activities.teacher.MainActivity">


    <ImageView
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_school_top" />
    <LinearLayout
        android:layout_margin="40dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:drawableLeft="@drawable/icon_student"
            android:textColor="#ffffff"
            android:background="#364242"
            android:layout_gravity="center"
            android:id="@+id/btnStudent"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:paddingLeft="7dp"

            android:text="Student Login " />

        <Button
            android:paddingLeft="9dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_userteacher"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:background="#364242"
            android:layout_gravity="center"
            android:id="@+id/btnTeacher"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="Teacher Login" />



    </LinearLayout>

</LinearLayout>